{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-solution",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "AgoraOverflow.slnx",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/backend"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "publish",
        "AgoraOverflow.slnx",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/backend"
      },
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/backend/AgoraOverflow.AppHost"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "isBackground": true,
      "problemMatcher": "$msCompile"
    },
    {
      "label": "install frontend dependencies",
      "command": "npm",
      "type": "shell",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/src/clientApp"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "frontend dev server",
      "command": "npm",
      "type": "shell",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/src/clientApp"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
